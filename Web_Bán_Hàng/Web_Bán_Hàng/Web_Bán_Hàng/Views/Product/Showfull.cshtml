@model Web_Bán_Hàng.Models.ViewModel.ProductDanhGiaModel

@{
    ViewData["Title"] = "Tất Cả Bình Luận";
    PhanTrang trang = new PhanTrang();
    int pageo = 0;
    if (ViewBag.Paging != null)
    {
        trang = ViewBag.Paging;
        pageo = trang.TrangHienTai;
    }
}
<div>
<div class="product-details row ">
        <div class="col-sm-12">
            <div class="row"></div>
            <div class="col-6">
                <img src="~/image/@Model.ProductDetail.Image" alt="" width="300" height="300" />              
            </div>
            <div class="col-6">
                <h2>@Model.ProductDetail.Name</h2> <!-- Hiển thị tên sản phẩm -->
            </div>
        </div>


        <hr />
    
        <div class="reviews">
            <h3> Tất Cả Bình Luận</h3>
            @foreach (var danhGia in Model.DanhGias)
            {
                <div class="review">
                    <div class="review-header">
                        <strong>@danhGia.NameUser</strong> <!-- Tên người dùng -->
                        <span><i class="fa fa-clock-o"></i> @danhGia.CreatedAt.ToString("hh:mm tt")</span>
                        <span><i class="fa fa-calendar-o"></i> @danhGia.CreatedAt.ToString("dd MMM yyyy")</span>
                    </div>
                    <p>@danhGia.BinhLuan</p>
                    <div class="rating">
                        @for (int i = 0; i < danhGia.Diem; i++)
                        {
                            <i class="fa fa-star"></i>
                        }
                    </div> 
                    <hr />
                </div>
            }
        </div>
</div>

<!-- Nếu không có bình luận nào -->
@if (Model.DanhGias.Count == 0)
{
    <p>Chưa có bình luận nào cho sản phẩm này.</p>
}
    <partial name="_phantrang2partile" model="@trang"></partial>
</div>


