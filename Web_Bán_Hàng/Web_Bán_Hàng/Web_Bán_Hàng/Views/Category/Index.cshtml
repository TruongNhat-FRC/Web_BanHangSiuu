@model IEnumerable<ProductModel>

@{
	Layout = "_Layout";
}

<style>
	.features_items .col-sm-4 {
		margin-bottom: 30px; /* Khoảng cách giữa các sản phẩm */
	}

	.product-image-wrapper {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		height: 100%; /* Đồng bộ chiều cao khối chứa */
		border: 1px solid #ddd; /* Viền nhẹ */
		box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Hiệu ứng đổ bóng */
		transition: all 0.3s ease; /* Hiệu ứng hover mượt */
	}

		.product-image-wrapper:hover {
			transform: translateY(-5px); /* Hiệu ứng nổi khi hover */
		}

	.productinfo {
		flex: 1; /* Chiếm khoảng không gian lớn */
		text-align: center;
		padding: 15px;
	}

		.productinfo img {
			width: 100%;
			height: 250px; /* Đặt chiều cao cố định cho hình ảnh */
			object-fit: cover; /* Đảm bảo ảnh không bị méo */
		}

		.productinfo h2 {
			font-size: 18px;
			font-weight: bold;
			color: #80C943;
			margin-bottom: 10px;
		}

		.productinfo p {
			white-space: nowrap; /* Giới hạn nội dung 1 dòng */
			overflow: hidden;
			text-overflow: ellipsis; /* Dấu "..." khi nội dung dài */
			margin-bottom: 5px;
		}

	.add-to-cart {
		margin-top: 10px;
		font-size: 14px;
	}

	.choose {
		margin-top: auto; /* Đẩy phần này xuống đáy */
		padding: 10px;
		background: #f9f9f9; /* Phần nền nhẹ cho vùng lựa chọn */
		text-align: center;
	}

		.choose a {
			font-size: 13px;
			color: #333;
			transition: color 0.3s ease;
		}

			.choose a:hover {
				color: #80C943; /* Màu khi hover */
			}

</style>

<div class="col-sm-3">
	@Html.Partial("_Sidebar");
</div>

<div class="col-sm-9 padding-right">
	@Html.Partial("_FilterPartial");

	<div class="features_items">
		<!--features_items-->
		<h2 class="title text-center">@ViewBag.Name</h2>

		@if (Model == null || !Model.Any(item => item.IsVisible))
		{
			<h3 class="text-center text-muted">Danh mục này hiện không có sản phẩm.</h3>
		}
		else
		{
			<div class="row">
				@foreach (var item in Model)
				{
					if (item.IsVisible)
					{
						<div class="col-sm-4">
							<div class="product-image-wrapper">
								<div class="single-products">
									<a asp-action="Detail" asp-controller="Product" asp-route-Id="@item.Id">
										<div class="productinfo text-center">
											<img src="~/image/@item.Image" alt="" class="img-fluid mb-3" />
											<h2>@item.Price.ToString("#,0")VNĐ</h2>
											<p>@item.Name</p>
											
											<p>Loại Sản Phẩm: @item.Category.Name</p>
											<p>Thương Hiệu: @item.Brand.Name</p>
											<p class="product-name">Lượt mua : @item.PurchaseCount</p>
											@if (item.Quantity > 0)
											{
												<a class="btn btn-default add-to-cart" asp-action="Add" asp-controller="Cart" asp-route-id="@item.Id">
													<i class="fa fa-shopping-cart"></i> Thêm vào giỏ hàng
												</a>
											}
											else
											{
												<a class="btn btn-danger add-to-cart ">
													<i class="fa fa-box-open" style="color: grey;"></i> Hết Hàng
												</a>
											}
										</div>
									</a>
								</div>
								<div class="choose mt-3">
									@if (User.Identity?.IsAuthenticated ?? false)
									{
										<ul class="nav nav-pills nav-justified">
											<li>
												<a class="btn btn-outline-danger add-btn-yeuthich" data-product_id="@item.Id">
													<i class="fa fa-plus-square"></i> Thêm vào yêu thích
												</a>
											</li>
										</ul>
									}
								</div>
							</div>
						</div>
					}
				}
			</div>
		}
	</div><!--features_items-->







	

</div>
@section Scripts {
	<script type="text/javascript">
		$(document).ready(function () {
			$('#sort_by').on('change', function () {
				var url = $(this).val();
				// alert(url);
				if (url) {
					window.location = url;
					return false;
				}
			});
		});
	</script>

}