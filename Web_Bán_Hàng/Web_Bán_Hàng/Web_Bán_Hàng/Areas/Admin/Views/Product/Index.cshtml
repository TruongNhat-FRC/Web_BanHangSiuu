@model IEnumerable<ProductModel>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
    PhanTrang trang = new PhanTrang();
    int pageo = 0;
    if (ViewBag.Paging != null)
    {
        trang = ViewBag.Paging;
        pageo = trang.TrangHienTai;
    }

}

<h1 class="text-center my-4">Danh sách sản phẩm</h1>
<a asp-action="Add" class="btn btn-sm btn-primary" asp-controller="Product">Thêm sản phẩm</a>

<!-- Bảng sản phẩm -->
<div class="container">
    <table class="table table-bordered table-hover text-center">
        <thead class="table-dark">
            <tr>
                <th scope="col">Mã sản phẩm</th>
                <th scope="col">Tên sản phẩm</th>
                <th scope="col">Mô tả</th>
                <th scope="col">Giá</th>
                <th scope="col">Đường dẫn</th>
                <th scope="col">Hình ảnh</th>
                <th scope="col">Loại sản phẩm</th>
                <th scope="col">Thương hiệu</th>
                <th scope="col">Số lượng</th>
                <th scope="col">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    if (item.IsVisible) // Kiểm tra trạng thái hiển thị
                    {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>@item.Description</td>
                                        <td>@item.Price.ToString("#,0") VND</td>
                                        <td>@item.Slug</td>
                                        <td><img src="~/image/@item.Image" width="100" /></td>
                                        <td>@item.Category.Name</td>
                                        <td>@item.Brand.Name</td>
                                        <td>@item.Quantity</td>
                                        <td style="width: 150px;">
                                <a asp-action="Edit" class="btn btn-sm btn-success me-1" asp-controller="Product" asp-route-id="@item.Id">  <i class="fas fa-edit"></i>Edit</a>
                                            <a asp-action="Delete" class="btn btn-sm btn-danger confirmDeletion" asp-controller="Product" asp-route-id="@item.Id"> <i class="fas fa-trash"></i>Delete</a>
                                        </td>
                                    </tr>
                    }
                }
            }
            else
            {
                    <tr>
                        <td colspan="10">Không có sản phẩm nào.</td>
                    </tr>
            }
        </tbody>
    </table>
    <!-- Partial view phân trang -->
    <!-- Partial view phân trang -->
    <partial name="_phantrang" model="@trang"></partial>

 
</div>
<!-- Thêm Font Awesome cho biểu tượng -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
