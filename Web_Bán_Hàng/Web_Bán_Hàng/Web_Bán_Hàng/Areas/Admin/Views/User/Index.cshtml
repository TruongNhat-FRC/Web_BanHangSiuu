@model IEnumerable<Web_Bán_Hàng.Models.AppUserModel>

@{
    ViewData["Title"] = "Danh sách người dùng";
}

<h2>@ViewData["Title"]</h2>

<div class="container">
    <table class="table table-bordered table-hover text-center">
        <thead class="table-dark">
            <tr>
                <th style="width: 20%; text-align: center;">UserName</th>
                <th style="width: 25%; text-align: center;">Email</th>
                <th style="width: 20%; text-align: center;">Họ và Tên</th> <!-- Cột Họ và Tên -->
                <th style="width: 25%; text-align: center;">Quyền</th>
                <th style="width: 10%; text-align: center;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.FullName</td> <!-- Hiển thị họ và tên -->
                    <td>
                        @if (user.Roles != null && user.Roles.Any())
                        {
                            <ul style="padding-left: 0; list-style-type: none;">
                                <!-- Xóa bullet points -->
                                @foreach (var role in user.Roles)
                                {
                                    <li style="display: inline-block; margin-right: 5px;">@role</li> <!-- Hiển thị theo dòng -->
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-muted">Không có quyền</span>
                        }
                    </td>
                    <td>
                        <div style="display: flex; gap: 5px; justify-content: space-around;">
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-info"><i class="fas fa-eye"></i> Quyền</a>
                            <a asp-action="EditInfo" asp-route-id="@user.Id" class="btn btn-secondary">Chỉnh sửa thông tin</a>
                            <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger"> <i class="fas fa-trash"></i>Xóa</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a asp-action="DanhSachNguoiDungBiXoa" class="btn btn-danger">Danh sách người dùng bị vô hiệu hóa -></a>

<!-- Thêm Font Awesome cho biểu tượng -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
