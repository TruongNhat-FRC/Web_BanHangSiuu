@model Web_Bán_Hàng.Models.EditUserRolesViewModel

@{
    ViewData["Title"] = "Chỉnh sửa quyền người dùng";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="UserId" />
    <div>
        <h4>Tài khoản: @Model.UserName</h4>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Quyền</th>
                <th>Đã chọn</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.AvailableRoles.Count; i++)
            {
                <tr>
                    <td>@Model.AvailableRoles[i].RoleName</td>
                    <td>
                        <input asp-for="AvailableRoles[i].IsSelected" type="checkbox" />
                        <input type="hidden" asp-for="AvailableRoles[i].RoleId" />
                        <input type="hidden" asp-for="AvailableRoles[i].RoleName" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Lưu</button>
</form>
