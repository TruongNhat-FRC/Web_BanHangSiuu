@model IEnumerable<CategoryModel>
@{

    ViewData["Title"] = "Danh sách loại sản phầm";
    PhanTrang  trang = new PhanTrang();
    int pageo = 0;
    if(ViewBag.Trang != null)
    {
        trang = ViewBag.Trang;
        pageo = trang.TrangHienTai;
    }
}



<h1 class="text-center my-4">Danh sách loại sản phẩm</h1>
<a asp-action="Add" class="btn btn-sm btn-primary" asp-controller="Category">Thêm danh mục </a>
<!-- Bảng sản phẩm -->
<div class="container">
    <table class="table table-bordered table-hover text-center">
        <thead class="table-dark">
            <tr>
                <th scope="col">Mã loại sản phẩm</th>
                <th scope="col">Tên Loại Danh Mục</th>
                <th scope="col">Mô tả</th>
                <th scope="col">Đường Dẫn</th>
                <th scope="col">Trạng Thái</th>
                
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>                
                        <td>@item.Slug</td>
                        <td>
                            @if (@item.Status == 1)
                            {
                                <span class="text text-success">Hiển thị</span>
                            }
                            else
                            {
                                <span class="text text-danger">Ẩn</span>
                            }

                        </td>
                       <td style="width: 150px;">
                            <a asp-action="Edit" class="btn btn-sm btn-success me-1" asp-controller="Category" asp-route-id="@item.Id"> <i class="fas fa-edit"></i>Edit</a>
                            <a asp-action="Delete" class="btn btn-sm btn-danger confirmDeletion" asp-controller="Category" asp-route-id="@item.Id"> <i class="fas fa-trash"></i>Delete</a>
                        </td>

                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8">Không có loại sản phẩm nào.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<partial name="_phantrang" model="@trang"></partial>
