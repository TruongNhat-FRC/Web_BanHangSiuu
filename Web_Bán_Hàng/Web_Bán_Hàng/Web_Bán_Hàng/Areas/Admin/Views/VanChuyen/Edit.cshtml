@model Web_Bán_Hàng.Models.VanChuyenModel

<div class="container">
    <h2>Sửa địa chỉ vận chuyển</h2>


    <form method="post" asp-action="Edit">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label for="ThanhPho">Thành phố</label>
            <input type="text" class="form-control" value="@Model.thanhpho" readonly />
        </div>

        <div class="form-group">
            <label for="Quan">Quận huyện</label>
            <input type="text" class="form-control" value="@Model.Quan" readonly />
        </div>

        <div class="form-group">
            <label for="PhuongXa">Phường xã</label>
            <input type="text" class="form-control" value="@Model.Phuong_xa" readonly />
        </div>

        <div class="form-group">
            <label for="Gia">Giá</label>
            <input type="number" step="0.01" asp-for="Gia" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">Cập nhật</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy</a>
    </form>
</div>
